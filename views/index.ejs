<% include _header %>
<% if (currentUsuario) { %>
  <div class="container" id="administracion">
    <h1 id="titulo1"> ¡Bienvenido al sistema de administracion ultracero!</h1>
      <hr>
        <h4> Usuarios registrados: </h4>
          <% usuarios.forEach((usuario) => { %>
            <div class="panel panel-info">
              <div class="panel-heading">
                <a> <%= usuario.name() %>, <%= usuario.usrRole() %></a>
              </div>
            </div>
          <% }) %>
  </div>
<% } else { %>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" id="carrusel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/ultracero2.jpg" alt="First slide" id="carruself">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/letrero1.jpg" alt="Second slide" id="carruself">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="ultracero4.jpg" alt="Third slide" id="carruself">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="container" id="indexpublico">
    <div id="letreros">
      <div class="card" style="width: 18rem;">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="card-img-top" src="/letrero3.jpg" alt="First slide" width="286" heading="180">
            </div>
            <div class="carousel-item">
              <img class="card-img-top" src="/letrero2.jpg" alt="Second slide" width="280" heading="180">
            </div>
            <div class="carousel-item">
              <img class="card-img-top" src="/letrero1.jpg" alt="Third slide" width="280" heading="180">
            </div>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title">Letreros</h5>
          <p class="card-text">Creación de todo tipo de letreros para su negocio.</p>
        </div>    
      </div>
    </div>
    <div id="decoraciones">
      <div class="card" style="width: 18rem;">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="card-img-top" src="/decoracion2.jpg" alt="First slide" width="280" heading="180">
            </div>
            <div class="carousel-item">
              <img class="card-img-top" src="/decoracion1.jpg" alt="Second slide" width="280" heading="180">
            </div>
            <div class="carousel-item">
              <img class="card-img-top" src="/decoracion2.jpg" alt="Third slide" width="280" heading="180">
            </div>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title">Decoraciones</h5>
          <p class="card-text">Creación de todo tipo de elementos para su negocio.</p>
        </div>    
      </div>
    </div>
    <div id="joyeriapublic">
      <div class="card" style="width: 18rem;">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="card-img-top" src="/joyeria2.jpg" alt="First slide" width="280" heading="180">
            </div>
            <div class="carousel-item">
              <img class="card-img-top" src="/joyeria1.jpg" alt="Second slide" width="280" heading="180">
            </div>
            <div class="carousel-item">
              <img class="card-img-top" src="/joyeria3.jpg" alt="Third slide" width="280" heading="180">
            </div>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title">Joyería</h5>
          <p class="card-text">Creación de todo todo tipo de joyas.</p>
        </div>    
      </div>
    </div>
  </div>
<% } %>
<% include _footer %>